{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!**/dist",
      "!**/dist-temp",
      "!**/node_modules",
      "!**/.next",
      "!**/build",
      "!**/coverage",
      "!**/vendor",
      "!**/build*.ts",
      "!**/examples/**/docs",
      "!**/*.min.js",
      "!**/*.min.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "noUselessFragments": "error",
        "noUselessUndefinedInitialization": "error",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noDelete": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "noNonNullAssertion": "error",
        "noParameterAssign": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "off",
        "useForOf": "error",
        "useFragmentSyntax": "off",
        "useShorthandAssign": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "error",
        "noSkippedTests": "error",
        "noConsole": { "level": "error", "options": { "allow": ["log"] } }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "overrides": [
    {
      "includes": [
        "src/shared/adapters/**",
        "src/shared/lib/**",
        "src/popup/**",
        "examples/todo-list/src/background/handlers.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["examples/team-task-manager/**", "examples/webrtc-p2p-chat/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noExplicitAny": "off",
            "noEmptyBlockStatements": "off",
            "useIterableCallbackReturn": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          },
          "a11y": {
            "useButtonType": "off",
            "noAutofocus": "off",
            "noLabelWithoutControl": "off",
            "useKeyWithMouseEvents": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off",
            "noUnusedFunctionParameters": "off"
          }
        }
      }
    },
    {
      "includes": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"],
      "linter": {
        "rules": {
          "complexity": {
            "noForEach": "off"
          },
          "style": {
            "useForOf": "off",
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
