{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
  "files": {
    "ignore": [
      "**/dist/**",
      "**/dist-temp/**",
      "**/node_modules/**",
      "**/.next/**",
      "**/build/**",
      "**/coverage/**",
      "**/vendor/**",
      "**/build*.ts",
      "**/examples/**/docs/**",
      "**/*.min.js",
      "**/*.min.css"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "noUselessFragments": "error",
        "noUselessUndefinedInitialization": "error",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noDelete": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "noNonNullAssertion": "error",
        "noParameterAssign": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "off",
        "useForOf": "error",
        "useFragmentSyntax": "off",
        "useShorthandAssign": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "error",
        "noSkippedTests": "error",
        "noConsole": { "level": "error", "options": { "allow": ["log"] } }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "overrides": [
    {
      "include": [
        "src/shared/adapters/**",
        "src/shared/lib/**",
        "src/popup/**",
        "examples/todo-list/src/background/handlers.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "include": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"],
      "linter": {
        "rules": {
          "complexity": {
            "noForEach": "off"
          },
          "style": {
            "useForOf": "off",
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
