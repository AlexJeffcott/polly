{
  "files": {
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "ignoreUnknown": true,
    "ignore": ["docs/**/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
