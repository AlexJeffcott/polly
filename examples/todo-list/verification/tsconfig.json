{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../..",
    "paths": {
      "@fairfox/polly": ["web-ext/src/index.ts"],
      "@fairfox/polly/*": ["web-ext/src/*"]
    }
  },
  "include": ["./**/*", "../src/**/*", "../../polly/src/**/*"]
}
