{
  "name": "webrtc-p2p-chat-example",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "bun run --filter server dev & bun run --filter client dev",
    "build": "bun run --filter server build && bun run --filter client build",
    "start": "bun run --filter server start",
    "test": "bun test",
    "test:server": "bun run --filter server test",
    "test:client": "bun run --filter client test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun run --filter server typecheck && bun run --filter client typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.3"
  }
}
