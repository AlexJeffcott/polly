{
  "name": "web-ext",
  "version": "0.1.0",
  "type": "module",
  "description": "Chrome Extension starter",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run build.ts",
    "build:prod": "bun run build.ts --prod",
    "typecheck": "bunx tsc --noEmit && bunx tsc --noEmit -p tsconfig.test.json",
    "typecheck:src": "bunx tsc --noEmit",
    "typecheck:tests": "bunx tsc --noEmit -p tsconfig.test.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@playwright/test": "^1.55.0",
    "@types/bun": "^1.2.19",
    "@types/chrome": "^0.0.268",
    "@types/node": "^24.2.0",
    "puppeteer": "^24.16.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@preact/signals": "^2.3.1",
    "preact": "^10.27.2"
  }
}
