{
  "name": "@fairfox/polly-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Multi-execution-context framework with reactive state and cross-context messaging",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bun install && cd packages/polly && bun run build:lib && bash ../../scripts/install-cli.sh",
    "dev": "bun run --cwd packages/polly dev",
    "build": "bun run --cwd packages/polly build",
    "build:prod": "bun run --cwd packages/polly build:prod",
    "build:lib": "bun run --cwd packages/polly build:lib",
    "typecheck": "bun run --cwd packages/polly typecheck && bun run --cwd packages/tests typecheck",
    "typecheck:src": "bun run --cwd packages/polly typecheck",
    "typecheck:tests": "bun run --cwd packages/tests typecheck",
    "lint": "bun run --cwd packages/polly lint",
    "lint:fix": "bun run --cwd packages/polly lint:fix",
    "format": "bun run --cwd packages/polly format",
    "test": "bun run --cwd packages/tests test",
    "test:watch": "bun run --cwd packages/tests test:watch",
    "test:framework": "bun run --cwd packages/tests test:framework",
    "test:framework:ui": "bun run --cwd packages/tests test:framework:ui",
    "test:framework:debug": "bun run --cwd packages/tests test:framework:debug",
    "test:framework:headed": "bun run --cwd packages/tests test:framework:headed",
    "test:all": "bun run --cwd packages/tests test:all",
    "tla:up": "docker-compose -f specs/docker-compose.yml up -d",
    "tla:down": "docker-compose -f specs/docker-compose.yml down",
    "tla:check": "docker-compose -f specs/docker-compose.yml exec tla tlc MessageRouter.tla",
    "tla:shell": "docker-compose -f specs/docker-compose.yml exec tla sh"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
