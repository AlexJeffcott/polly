{
  "name": "@fairfox/polly",
  "version": "0.9.2",
  "private": false,
  "type": "module",
  "description": "Multi-execution-context framework with reactive state and cross-context messaging for Chrome extensions, PWAs, and worker-based applications",
  "workspaces": [
    "tests"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "polly": "./dist/cli/polly.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/index.d.ts"
    },
    "./state": {
      "import": "./dist/src/shared/lib/state.js",
      "types": "./dist/shared/lib/state.d.ts"
    },
    "./message-bus": {
      "import": "./dist/src/shared/lib/message-bus.js",
      "types": "./dist/shared/lib/message-bus.d.ts"
    },
    "./background": {
      "import": "./dist/src/background/index.js",
      "types": "./dist/background/index.d.ts"
    },
    "./message-router": {
      "import": "./dist/src/background/message-router.js",
      "types": "./dist/background/message-router.d.ts"
    },
    "./adapters": {
      "import": "./dist/src/shared/adapters/index.js",
      "types": "./dist/shared/adapters/index.d.ts"
    },
    "./errors": {
      "import": "./dist/src/shared/lib/errors.js",
      "types": "./dist/shared/lib/errors.d.ts"
    },
    "./types": {
      "import": "./dist/src/shared/types/messages.js",
      "types": "./dist/shared/types/messages.d.ts"
    },
    "./verify": {
      "import": "./dist/tools/verify/src/config.js",
      "types": "./dist/tools/verify/src/config.d.ts"
    },
    "./test": {
      "import": "./dist/tools/test/src/index.js",
      "types": "./dist/tools/test/src/index.d.ts"
    },
    "./teach": {
      "import": "./dist/tools/teach/src/index.js",
      "types": "./dist/tools/teach/src/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run build.ts",
    "build:prod": "bun run build.ts --prod",
    "build:lib": "bun run build-lib.ts",
    "build:full-featured": "bun run scripts/build-user-extension.ts examples/full-featured",
    "build:full-featured:prod": "bun run scripts/build-user-extension.ts examples/full-featured --prod",
    "typecheck": "bunx tsc --noEmit && bun run --cwd tests typecheck",
    "typecheck:tests": "bun run --cwd tests typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run --cwd tests test",
    "test:watch": "bun run --cwd tests test:watch",
    "test:framework": "bun run --cwd tests test:framework",
    "test:framework:ui": "bun run --cwd tests test:framework:ui",
    "test:framework:debug": "bun run --cwd tests test:framework:debug",
    "test:framework:headed": "bun run --cwd tests test:framework:headed",
    "test:all": "bun run lint && bun run typecheck && bun run --cwd tests test:all && bun run test:examples",
    "test:examples": "echo '\\n=== Testing Examples ===' && bun run test:example:minimal && bun run test:example:my-awesome-extension && bun run test:example:todo-list && bun run test:example:full-featured",
    "test:example:minimal": "echo '\\n--- Minimal Example ---' && bun run --cwd examples/minimal test:all",
    "test:example:my-awesome-extension": "echo '\\n--- My Awesome Extension ---' && bun run --cwd examples/my-awesome-extension test:all",
    "test:example:todo-list": "echo '\\n--- Todo List ---' && bun run --cwd examples/todo-list test:all",
    "test:example:full-featured": "echo '\\n--- Full Featured ---' && bun run --cwd examples/full-featured test:all",
    "prepublishOnly": "bun run typecheck && bun run lint && bun run build:lib",
    "publish:public": "npm publish --access public --otp=$(pass-cli item totp --output json --item-id Rdr--oUgHp-IfyjoTB7vhMPHfNt6Oz2JpXfS1WrdQMQ9damDMPOvKiOxxpCZqp92WgqXnfY68cSXWdQ_JVMNMQ== --share-id Ixmpll6U5ioU_1P4fzUbarQNANRPU51O68xzFblTB08S0HUfw4dhQaNAv4Yv7Sud_Vf8ps4mnQUFqdvN-eTRdQ== | jq -r '.totp')"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/chrome": "^0.1.32",
    "fast-check": "^3.23.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@preact/signals": "^2.5.1",
    "preact": "^10.28.1",
    "ts-morph": "^21.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3",
    "preact": "^10.28.1",
    "@preact/signals": "^2.5.1"
  },
  "keywords": [
    "multi-context",
    "chrome-extension",
    "browser-extension",
    "web-extension",
    "pwa",
    "web-workers",
    "service-workers",
    "framework",
    "reactive",
    "state-management",
    "messaging",
    "cross-context",
    "preact",
    "signals",
    "typescript",
    "distributed",
    "concurrent"
  ],
  "author": "Alex Jeffcott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexJeffcott/polly"
  },
  "bugs": {
    "url": "https://github.com/AlexJeffcott/polly/issues"
  },
  "homepage": "https://github.com/AlexJeffcott/polly#readme"
}
