{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["chrome"],
    "paths": {
      "@fairfox/polly": ["../polly/src/index.ts"],
      "@fairfox/polly/state": ["../polly/src/shared/lib/state.ts"],
      "@fairfox/polly/message-bus": ["../polly/src/shared/lib/message-bus.ts"],
      "@fairfox/polly/message-router": ["../polly/src/background/message-router.ts"],
      "@fairfox/polly/background": ["../polly/src/background/index.ts"],
      "@fairfox/polly/types": ["../polly/src/shared/types/messages.ts"],
      "@fairfox/polly-verify": ["../verify/src/index.ts"]
    }
  },
  "include": ["src/**/*"]
}
