{
  "extends": "../polly/tsconfig.json",
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../polly/src/*"],
      "@atoms": ["../polly/src/ui/atoms/index"],
      "@atoms/*": ["../polly/src/ui/atoms/*"],
      "@molecules": ["../polly/src/ui/molecules/index"],
      "@molecules/*": ["../polly/src/ui/molecules/*"],
      "@pages": ["../polly/src/ui/pages/index"],
      "@pages/*": ["../polly/src/ui/pages/*"],
      "@fairfox/polly": ["../polly/src/index.ts"],
      "@fairfox/polly/state": ["../polly/src/shared/lib/state.ts"],
      "@fairfox/polly/message-bus": ["../polly/src/shared/lib/message-bus.ts"],
      "@fairfox/polly/background": ["../polly/src/background/index.ts"],
      "@fairfox/polly/message-router": ["../polly/src/background/message-router.ts"],
      "@fairfox/polly/adapters": ["../polly/src/shared/adapters/index.ts"],
      "@fairfox/polly/errors": ["../polly/src/shared/lib/errors.ts"],
      "@fairfox/polly/types": ["../polly/src/shared/types/messages.ts"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
