{
  "name": "@fairfox/polly-verify",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Formal verification for multi-context message-passing systems using TLA+. Automatically generates TLA+ specifications from TypeScript code.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./src/cli.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "specs"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build:lib": "bun run build-lib.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fairfox/polly-analysis": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@fairfox/polly": "^0.1.0"
  },
  "keywords": [
    "formal-verification",
    "tla-plus",
    "tla+",
    "model-checking",
    "verification",
    "chrome-extension",
    "web-extension",
    "message-passing",
    "event-bus",
    "websocket",
    "concurrent-systems",
    "distributed-systems",
    "correctness",
    "testing",
    "typescript",
    "cli"
  ],
  "author": "Alex Jeffcott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexJeffcott/polly",
    "directory": "packages/verify"
  },
  "bugs": {
    "url": "https://github.com/AlexJeffcott/polly/issues"
  },
  "homepage": "https://github.com/AlexJeffcott/polly/tree/main/packages/verify#readme"
}
