{
  "name": "@fairfox/web-ext-verify",
  "version": "0.1.0",
  "type": "module",
  "description": "Formal verification for message-passing systems using TLA+. Automatically generates TLA+ specifications from TypeScript code.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "web-ext-verify": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "specs"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build:lib": "bun run build-lib.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run build:lib",
    "publish:public": "npm publish --access public"
  },
  "dependencies": {
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@fairfox/web-ext": "^0.1.0"
  },
  "keywords": [
    "formal-verification",
    "tla-plus",
    "tla+",
    "model-checking",
    "verification",
    "chrome-extension",
    "web-extension",
    "message-passing",
    "event-bus",
    "websocket",
    "concurrent-systems",
    "distributed-systems",
    "correctness",
    "testing",
    "typescript",
    "cli"
  ],
  "author": "Alex Jeffcott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjeffcott/web-ext",
    "directory": "packages/verify"
  },
  "bugs": {
    "url": "https://github.com/alexjeffcott/web-ext/issues"
  },
  "homepage": "https://github.com/alexjeffcott/web-ext/tree/main/packages/verify#readme"
}
